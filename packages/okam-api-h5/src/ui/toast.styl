/**
 * @file Toast style. Dependence on weui style definition: https://github.com/Tencent/weui.
 * @author sparklewhy@gmail.com
 */

.okam-api-toast
    .weui-loading
        width: 50px
        height: @width

.okam-api-toast-content
    position: fixed
    z-index: 5000
    top: 50%
    left: 50%
    transform: translate(-50%, -50%)

    display: flex
    flex-direction: column
    align-items: center
    justify-content: space-around
    padding: 15px
    min-width: 120px
    min-height: 120px
    max-width: 70%
    box-sizing: border-box

    border-radius: 5px
    background: rgba(40, 40, 40, 0.75)
    text-align: center
    word-break: break-all

.okam-api-toast-title
    margin: 3px 0
    color: #fff
    font-size: 16px
    line-height: 1.6

.okam-api-toast-icon
    margin: 6px auto
    &.weui-icon-success-no-circle
        font-size: 50px
        color: #fff

.okam-api-toast-image
    width: 55px
    height: @width
    background: transparent no-repeat
    background-size: 100%

